# from <https://github.com/cooktheryan/td-agent/blob/d7500fbfe7c1a241c7348a0cb0c6d4670306779c/redhat/td-agent.service>
# referenced in <https://github.com/treasure-data/td-agent/pull/82>
[Unit]
Description=td-agent
After=syslog.target
After=network.target

[Service]
Type=simple
User=td-agent
Group=td-agent
ExecStart=/usr/sbin/td-agent -c /etc/td-agent/td-agent.conf -p /etc/td-agent/plugin/

# Give a reasonable amount of time for the server to start up/shut down
TimeoutSec=300

[Install]
WantedBy=multi-user.target
